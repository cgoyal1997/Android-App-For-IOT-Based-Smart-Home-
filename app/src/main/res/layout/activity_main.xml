<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:id="@+id/btn1"
        />-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dashboard"
        android:text="DashBoard"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/colortext2"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Water level Display"
        android:paddingLeft="15dp"
        android:id="@+id/txt_view"
        android:layout_marginTop="13dp"
        android:textColor="@color/colortext"
        android:textSize="28dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/dashboard"
        android:textStyle="bold"/>



    <ToggleButton
        android:layout_width="160dp"
        android:layout_marginTop="13dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:id="@+id/tg"
        app:layout_constraintTop_toBottomOf="@+id/txt_view"
        />
    <ToggleButton
        android:layout_width="160dp"
        android:layout_marginLeft="50dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_marginTop="13dp"
        android:id="@+id/tg2"
        app:layout_constraintLeft_toRightOf="@id/tg"
        app:layout_constraintTop_toBottomOf="@id/txt_view" />

    <ToggleButton
        android:id="@+id/tg3"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tg" />

    <ToggleButton
        android:id="@+id/tg4"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/tg3"
        app:layout_constraintTop_toBottomOf="@id/tg" />

    <TextView
        android:id="@+id/flame"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="No Flame Detected"
        android:textAlignment="center"
        android:textColor="@color/colorview"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tg3"
         />

    <TextView
        android:id="@+id/gas"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="No Gas Detected"
        android:textAlignment="center"
        android:textColor="@color/colorview"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/flame"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/ir"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Safe"
        android:textAlignment="center"
        android:textColor="@color/colorview"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/gas"
        android:layout_marginTop="20dp"
       />

</android.support.constraint.ConstraintLayout>